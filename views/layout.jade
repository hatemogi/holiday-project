- site = site || {}
- title = site.title || '30일 프로젝트'
- description = site.description || "휴가 기간 동안 진행한 개인 프로젝트 데모 사이트"
doctype html
html
  head(prefix="og: http://ogp.me/ns#")
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= title
    meta(property="og:title" content="#{title}")
    meta(property="og:type" content="website")
    meta(property="og:url" content="http://holiday-project.hatemogi.com")
    meta(property="og:description" content="#{description}")
    if site.image
      meta(property="og:image" content="#{site.image}")
    meta(property="twitter:title" content="#{title}")
    meta(property="twitter:description" content="#{description}")

    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/jumbotron-narrow.css')
    link(rel='stylesheet' href='/css/style.css')
  body(ng-app="holiday")
    .container
      .header
        ul.nav.nav-pills.pull-right
          li
            a(href="/") 홈
          li
            a(href="/d3") D3.js 연습
          li
            a(href="http://hatemogi.com") 블로그
        h3.text-muted 30일 프로젝트
      block content
      .footer
        p
          a(href="http://hatemogi.com/holiday-project/") 개발일지
    script(src="/bower_components/angular/angular.min.js")
    script(src="/bower_components/angular-route/angular-route.min.js")
    script(src="/bower_components/d3/d3.min.js")
    script(src="/bower_components/d3-plugins/sankey/sankey.js")
    script(src="/js/app.min.js")
    script(data-main='/js/init.min.js' src='/js/require.min.js')
    include ga
    include github_badge
